# ===== API =====
API_PORT=4000
API_BASE_URL=http://localhost:4000

# SQLite default (works out-of-box)
DATABASE_URL="file:./dev.db"

# If you want Postgres instead, change DATABASE_URL like:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/utbot?schema=public"

# Yahoo polling interval (ms)
POLL_INTERVAL_MS=2000

# Candle timeframe (only 1m implemented in realtime builder)
TIMEFRAME=1m

# UT Bot parameters
UT_A=1
UT_C=10
UT_USE_HEIKIN=false

# Email alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="UT Bot <no-reply@example.com>"
