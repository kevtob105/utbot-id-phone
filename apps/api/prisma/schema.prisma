datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WatchSymbol {
  symbol  String   @id
  addedAt DateTime @default(now())
}

model SignalEvent {
  id        String   @id @default(cuid())
  symbol    String
  timeframe String
  side      String
  ts        DateTime
  price     Float
  stop      Float
  a         Float
  c         Int
  useHeikin Boolean

  @@index([symbol, ts])
}

model AlertRule {
  id        String   @id @default(cuid())
  symbol    String
  side      String   // BUY | SELL | ANY
  email     String?
  inApp     Boolean  @default(true)
  createdAt DateTime @default(now())
}
